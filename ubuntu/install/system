#!/bin/bash
# -*- mode: shell-script; -*-

function install {
    sudo apt-get install -y $@
}

function remove {
    sudo apt-get purge $@
}

install aptitude
install tmux xclip
install emacs emacs-goodies-el silversearcher-ag
install krusader konsole
install tilda
install liferea
install cmake
install htop
install thunderbird
install firefox
install network-manager-openconnect
# install workrave
install virtualbox
install git subversion meld
install filezilla
install dconf-cli
install dconf-editor
install wmctrl
install sshpass
install unetbootin

install wireshark
echo 'wireshark-common wireshark-common/install-setuid select true' | sudo debconf-set-selections
sudo dpkg-reconfigure --unseen-only wireshark-common 
sudo usermod -a -G wireshark $USER

install python-pip
install python-dev
sudo pip install thefuck --upgrade

remove unity-scope-video-remote
remove unity-scope-musicstores
