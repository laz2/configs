[alias]
    st = status -s
    pr = pull --rebase
    pu = push
    ci = commit -v
    co = checkout
    di = diff
    dic = diff --cached
    l = log --stat --graph
    br = branch
    ssave = stash save
    spop = stash pop
    slist = stash list
[color]
    ui = auto
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[push]
    default = simple
[merge]
    tool = meld
    conflictstyle = diff3
[branch]
    autosetupmerge = always
    autosetuprebase = always
[include]
    path = .gitconfig-private
