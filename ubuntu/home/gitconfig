[alias]
    st  = status -s
    ci  = commit
    co  = checkout
    di  = diff
    dic = diff --cached
    lo  = log --stat
    br  = branch
    ssave = stash save
    spop  = stash pop
    slist = stash list
[color]
    ui = auto
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[push]
    default = simple
[merge]
    tool = meld
    conflictstyle = diff3
[branch]
    autosetupmerge = always
    autosetuprebase = always
[include]
    path = .gitconfig-private
