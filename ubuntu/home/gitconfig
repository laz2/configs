[alias]
    st  = status -s
    ci  = commit
    co  = checkout
    di  = diff
    dic = diff --cached
    br  = branch
    ssave = stash save
    spop  = stash pop
    slist = stash list
[color]
    ui = auto
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[push]
    default = simple
[merge]
    tool = mymeld
    conflictstyle = diff3
[mergetool "mymeld"]
    cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED
[branch]
    autosetupmerge = always
    autosetuprebase = always
[include]
    path = .gitconfig-private
